{
	"name": "dart-export-index",
	"displayName": "Dart Barrel Export File Generator",
	"description": "Create barrel file that exports the files in current directory. This allows for importing whole folders in batch instead of importing each file one by one. Creates index.dart and dir_name.dart.",
	"icon": "screenshots/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/orestesgaolin/dart-export-index"
	},
	"version": "0.3.1",
	"publisher": "orestesgaolin",
	"engines": {
		"vscode": "^1.12.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.addCurrentFileToIndexDart",
		"onCommand:extension.addCurrentFileToIndexDartDirName",
		"onCommand:extension.exportDartFilesInCurrentDirectory",
    "onCommand:extension.exportDartFilesInCurrentDirectoryDirName",
    "onCommand:extension.exportDartFilesFromSubdirectoriesInCurrentDirectory",
    "onCommand:extension.exportDartFilesFromSubdirectoriesInCurrentDirectoryDirName"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.addCurrentFileToIndexDart",
				"title": "Export (add) current Dart file to index.dart"
			},
			{
				"command": "extension.addCurrentFileToIndexDartDirName",
				"title": "Export (add) current Dart file to dir_name.dart"
			},
			{
				"command": "extension.exportDartFilesInCurrentDirectory",
				"title": "Export Dart files in current directory to index.dart"
			},
			{
				"command": "extension.exportDartFilesInCurrentDirectoryDirName",
				"title": "Export Dart files in current directory to dir_name.dart"
      },
      {
        "command": "extension.exportDartFilesFromSubdirectoriesInCurrentDirectory",
        "title": "Export all Dart files in current directory and below to index.dart"
      },
      {
        "command": "extension.exportDartFilesFromSubdirectoriesInCurrentDirectoryDirName",
        "title": "Export all Dart files in current directory and below to dir_name.dart"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.12.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"ts-loader": "^8.0.11",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	}
}